<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:textSize="18sp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="8dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#858585" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
              android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/events"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_parent_rounded_corner"
           android:weightSum="1"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="0dp"
               android:padding="5dp"
               android:src="@drawable/events"
               android:layout_weight="0.30"
               android:layout_height="100dp" />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.70"
               android:paddingLeft="10dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:weightSum="1"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Events"
                   android:textStyle="bold"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:layout_weight="0.30"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Manage Your Events"
                   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                   android:layout_weight="0.40"/>
           </LinearLayout>
       </LinearLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/Complaints"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_parent_rounded_corner"
           android:weightSum="1"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="0dp"
               android:padding="5dp"
               android:src="@drawable/complaints"
               android:layout_weight="0.30"
               android:layout_height="100dp" />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.70"
               android:paddingLeft="10dp"
               android:id="@+id/complaints"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:weightSum="1"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Complaints"
                   android:textStyle="bold"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:layout_weight="0.30"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="View and lodge Complaints"
                   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                   android:layout_weight="0.40"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/foundandloss"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_parent_rounded_corner"
           android:weightSum="1"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="0dp"
               android:padding="5dp"
               android:src="@drawable/foundloss"
               android:layout_weight="0.30"
               android:layout_height="100dp" />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.70"
               android:paddingLeft="10dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:weightSum="1"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Services"
                   android:textStyle="bold"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:layout_weight="0.30"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Find your Lost Items"
                   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                   android:layout_weight="0.40"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/buyandsell"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_parent_rounded_corner"
           android:weightSum="1"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="0dp"
               android:padding="5dp"
               android:src="@drawable/buy"
               android:layout_weight="0.30"
               android:layout_height="100dp" />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.70"
               android:paddingLeft="10dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:weightSum="1"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Buy and Sell"
                   android:textStyle="bold"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:layout_weight="0.30"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Buy and sell your items"
                   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                   android:layout_weight="0.40"
                   android:id="@+id/textView" />
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/noticeboard"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_parent_rounded_corner"
           android:weightSum="1"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="0dp"
               android:padding="5dp"
               android:src="@drawable/noticeboard"
               android:layout_weight="0.30"
               android:layout_height="100dp" />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.70"
               android:paddingLeft="10dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:weightSum="1"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Notice Board"
                   android:textStyle="bold"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:layout_weight="0.30"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="View important Notes"
                   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                   android:layout_weight="0.40"/>
           </LinearLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:padding="5dp"
           android:id="@+id/about"
           android:layout_marginBottom="5dp"
           android:background="@drawable/bg_parent_rounded_corner"
           android:weightSum="1"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_width="0dp"
               android:padding="5dp"
               android:src="@drawable/about"
               android:layout_weight="0.30"
               android:layout_height="100dp" />
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="0.70"
               android:paddingLeft="10dp"
               android:layout_marginTop="10dp"
               android:orientation="vertical"
               android:weightSum="1"
               android:layout_height="match_parent">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="About"
                   android:textStyle="bold"
                   android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                   android:layout_weight="0.30"
                   />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:text="Contact and support"
                   android:textAppearance="@style/TextAppearance.AppCompat.Small"
                   android:layout_weight="0.40"/>
           </LinearLayout>
       </LinearLayout>

   </LinearLayout>
</ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/events"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_parent_rounded_corner"
            android:weightSum="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:padding="5dp"
                android:src="@drawable/comedy"
                android:layout_weight="0.30"
                android:layout_height="100dp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.70"
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Events"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_weight="0.30"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Manage Your Events"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_weight="0.40"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
