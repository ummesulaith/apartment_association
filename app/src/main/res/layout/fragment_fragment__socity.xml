<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"  android:background="#ffffff"
    tools:context="info.androidhive.listviewfeed.fragment.Fragment_Socity">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:textSize="18sp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="8dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#858585" />

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:background="#fff"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:background="#ffff"
            android:layout_below="@+id/lay2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Society Details"
                android:background="#808080"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingRight="8dp"
                android:gravity="left"
                android:paddingLeft="8dp"/>
            <TextView
                android:text="Society_No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:id="@+id/textView13" />
            <TextView
                android:text="Society_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/textView14"
                android:layout_below="@+id/textView13" />

            <TextView
                android:text="Builder_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/textView14" />
            <TextView
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/textView14" />
            <TextView
                android:text="Pincode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:layout_marginTop="18dp"
                android:layout_below="@+id/textView14" />



        </LinearLayout>
           </FrameLayout>
        <FrameLayout
            android:layout_width="364dp"
            android:layout_height="192dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="9dp"
            android:background="#ffff"
            android:layout_below="@+id/lay2"
            android:layout_weight="0.25">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="197dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flat Details"
                    android:background="#808080"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingRight="8dp"
                    android:gravity="left"
                    android:paddingLeft="8dp"/>
                <TextView
                    android:text="Flat no."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:id="@+id/textView13" />
                <TextView
                    android:text="Flat Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView14"
                    android:layout_below="@+id/textView13" />
                <TextView
                    android:text="Flat Owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView15"
                    android:layout_below="@+id/textView14" />
                <TextView
                    android:text="Block"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:id="@+id/textView16"
                    android:layout_below="@+id/textView15" />



            </LinearLayout>
        </FrameLayout>

</LinearLayout>


</RelativeLayout>
